.imgShow{
  position: relative;
  width: 100%;
  height: 600rpx;
  overflow: hidden;
}

.imgShow image{
  width: 100%;
  display: block;
  position: absolute;
  width: 100%;
}

.imgShow .txtBox{
  position:absolute;
  bottom: 20%;
  left: 40rpx;
  text-shadow: 0px 0px 3rpx black;
}

.txtBox .name{
  font-size: 50rpx;
  color: white;
  font-weight: bold;
}

.txtBox .txt{
  font-size: 30rpx;
  color:white;
}

.title{
  font-size: 35rpx;
  font-weight: bold;
  line-height: 80rpx;
  padding-left: 20rpx;
  margin-top: 20rpx;
  color: #333;
}

.content{
  font-size: 26rpx;
  padding: 0 20rpx;
  line-height: 40rpx;
  color: #666;
}

.musicBox .item{
  width: 95%;
  display: flex;
  /* background-color: pink; */
  padding: 10rpx 0rpx 10rpx 20rpx;
  justify-content: space-between;
  border-bottom: 1rpx solid #ccc;
  margin: 0 auto;
}

.item .txtBox{
  display: flex;
  flex-direction: column;
  flex: 1;
}

.item .playimg{
  width: 100rpx;
  height: 100%;
}

.item .playimg image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 15rpx;
}

.item .txtBox .mname{
  font-size: 35rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 600rpx;
  font-weight: 600;
}

.item .txtBox .nname{
  font-size: 28rpx;
  color: #777;
}

