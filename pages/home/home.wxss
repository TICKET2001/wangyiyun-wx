/* pages/home/home.wxss */

::-webkit-scrollbar{
  display: none;
}
swiper{
  width: 95%;
  height: 300rpx;
  margin: 15rpx auto;
  background-color: rgb(255, 255, 255);
}

swiper image{
  width: 100%;
  height: 100%;
}

.title{
  font-size: 32rpx;
  font-weight: bold;
  line-height: 50rpx;
  margin-left: 20rpx;
  padding-left: 20rpx;
  color: #333;
  border: 3px solid white;
  border-left-color: #FF0000;
}

.hotList{
  height: 300rpx;
  /* background-color: yellow; */
  display: flex;
  overflow: auto;
  align-items: center;
}

.hotList .item{
  width: 200rpx;
  text-align: center;
  margin-left: 20rpx;
}

.hotList .item image{
  width: 200rpx;
  height: 180rpx;
  background-color: aqua;
  border-radius: 10rpx;
}

.hotList .item text{
  font-size: 28rpx;
  color: #4d4d4d;
}

.musicBox{
  margin-top: 10rpx;
}

.musicBox .item{
  width: 95%;
  display: flex;
  /* background-color: pink; */
  padding: 10rpx 0rpx 10rpx 20rpx;
  justify-content: space-between;
  border-bottom: 1rpx solid #ccc;
  margin: 0 auto;
}

.item .txtBox{
  display: flex;
  flex-direction: column;
  flex: 1;
}

.item .playimg{
  width: 100rpx;
  height: 100%;
}

.item .playimg image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 15rpx;
}

.item .txtBox .mname{
  font-size: 35rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 600rpx;
}

.item .txtBox .nname{
  font-size: 28rpx;
  color: #777;
}